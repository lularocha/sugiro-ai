---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  footerColClass?: string;
}

const {
  title = "sugiro.ai",
  description = "Lula Rocha's portfolio â€” design tools, AI projects, and creative work at the intersection of art, design, and technology.",
  footerColClass,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? "https://sugiro.ai");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Lula Rocha" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="sugiro.ai" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/sugiro-legs.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-dark text-white font-sans antialiased pt-1 px-6 desktop:px-12 pb-8 flex flex-col">
    <div class="flex-1">
      <slot />
    </div>
    <Footer colClass={footerColClass} />
  </body>
</html>
