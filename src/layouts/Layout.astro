---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  footerColClass?: string;
}

const {
  title = "sugiro.ai",
  description = "Lula Rocha's portfolio â€” design tools, AI projects, and creative work at the intersection of art, design, and technology.",
  footerColClass,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? "https://sugiro.ai");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Lula Rocha" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="sugiro.ai" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/sugiro-legs.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-dark text-white font-sans antialiased pt-1 px-6 desktop:px-12 pb-8 flex flex-col">
    <div class="flex-1">
      <slot />
    </div>
    <Footer colClass={footerColClass} />

    <button
      id="scroll-to-top"
      aria-label="Scroll to top"
      class="fixed bottom-6 right-6 w-10 h-10 rounded-full flex items-center justify-center cursor-pointer border-0 opacity-0 pointer-events-none transition-opacity duration-300"
      style="background-color: #ff7700;"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="m5 12 7-7 7 7"/>
        <path d="M12 19V5"/>
      </svg>
    </button>

    <script>
      const btn = document.getElementById("scroll-to-top")!;

      window.addEventListener("scroll", () => {
        if (window.scrollY > 300) {
          btn.classList.remove("opacity-0", "pointer-events-none");
          btn.classList.add("opacity-100");
        } else {
          btn.classList.add("opacity-0", "pointer-events-none");
          btn.classList.remove("opacity-100");
        }
      });

      btn.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
      });

      btn.addEventListener("mouseenter", () => {
        btn.style.backgroundColor = "#ff9922";
      });
      btn.addEventListener("mouseleave", () => {
        btn.style.backgroundColor = "#ff7700";
      });
    </script>
  </body>
</html>
