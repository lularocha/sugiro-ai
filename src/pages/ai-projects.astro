---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="ai projects — sugiro.ai" description="A collection of AI-powered tools and web projects by Lula Rocha — glossary builder, prompt builder, calculators, and more.">
  <main class="page-container">
    <!-- Site Title -->
    <section class="col-span-12 desktop:col-span-3">
      <a
        href="/"
        class="site-title"
      >
        sugiro.ai
      </a>
    </section>

    <!-- Page Title + Description -->
    <section class="col-span-12 desktop:col-span-3 list-section about-section">
      <h2 class="section-heading">ai projects</h2>
      <p class="body-text" style="line-height: 1.65;">
        A collection of tools and web projects built with AI assistance and modern web technologies. These include productivity tools, calculators, and experimental utilities.
      </p>
    </section>

    <!-- Projects -->
    <section class="col-span-12 desktop:col-span-3 list-section">
      <h2 class="section-heading">projects</h2>
      <ul class="space-y-2">
        <li><a href="https://sugiro-glossary.vercel.app/" target="_blank" rel="noopener noreferrer" class="text-link body-text">glossary builder</a></li>
        <li><a href="https://sugiro-prompt.vercel.app/" target="_blank" rel="noopener noreferrer" class="text-link body-text">prompt builder</a></li>
        <li><a href="https://sugiro.io/qrcode/" target="_blank" rel="noopener noreferrer" class="text-link body-text">QR code generator</a></li>
        <li><a href="https://sugiro-mybtc.vercel.app/" target="_blank" rel="noopener noreferrer" class="text-link body-text">bitcoin calculator</a></li>
        <li><a href="https://sugiro.io/hash/" target="_blank" rel="noopener noreferrer" class="text-link body-text">hash cost calculator</a></li>
        <li><a href="https://sugiro.io/stonks/" target="_blank" rel="noopener noreferrer" class="text-link body-text">capital gains calculator</a></li>
      </ul>
    </section>

    <Nav colClass="col-span-12 desktop:col-start-11 desktop:col-span-2" />
  </main>
</Layout>
