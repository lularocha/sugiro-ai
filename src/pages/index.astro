---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout>
  <Header />
  <main class="grid grid-cols-12 gap-4">
    <section class="col-span-12 desktop:col-span-6">
      <h2 class="font-bold">Welcome to Sugiro</h2>
      <p class="font-light">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    </section>

    <!-- Project Index -->
    <section class="col-span-12 mt-8">
      <div class="grid grid-cols-1 desktop:grid-cols-4 gap-6">
        <a href="https://sugiro-glossary.vercel.app/" target="_blank" rel="noopener noreferrer" class="block bg-dark rounded-lg p-4 shadow-[0_0_20px_rgba(0,0,0,0.3)] transition-colors duration-200 hover:bg-zinc-800">
          <h3 class="font-bold mb-1">Glossary Builder</h3>
          <p class="text-xs font-light">A web tool for creating and managing custom glossaries with organized term definitions.</p>
        </a>
        <a href="https://sugiro-prompt.vercel.app/" target="_blank" rel="noopener noreferrer" class="block bg-dark rounded-lg p-4 shadow-[0_0_20px_rgba(0,0,0,0.3)] transition-colors duration-200 hover:bg-zinc-800">
          <h3 class="font-bold mb-1">Prompt Builder</h3>
          <p class="text-xs font-light">An AI prompt crafting tool that combines system and user prompts with file uploads.</p>
        </a>
        <a href="https://sugiro.io/qrcode/" target="_blank" rel="noopener noreferrer" class="block bg-dark rounded-lg p-4 shadow-[0_0_20px_rgba(0,0,0,0.3)] transition-colors duration-200 hover:bg-zinc-800">
          <h3 class="font-bold mb-1">QR Code Generator</h3>
          <p class="text-xs font-light">A free browser-based QR code generator with customizable size, colors, and error correction.</p>
        </a>
        <a href="https://sugiro-mybtc.vercel.app/" target="_blank" rel="noopener noreferrer" class="block bg-dark rounded-lg p-4 shadow-[0_0_20px_rgba(0,0,0,0.3)] transition-colors duration-200 hover:bg-zinc-800">
          <h3 class="font-bold mb-1">Bitcoin Calculator</h3>
          <p class="text-xs font-light">A Bitcoin converter between BTC, satoshis, and fiat currencies with real-time pricing.</p>
        </a>
        <a href="https://sugiro.io/hash/" target="_blank" rel="noopener noreferrer" class="block bg-dark rounded-lg p-4 shadow-[0_0_20px_rgba(0,0,0,0.3)] transition-colors duration-200 hover:bg-zinc-800">
          <h3 class="font-bold mb-1">Hash Cost Calculator</h3>
          <p class="text-xs font-light">A Bitcoin mining cost estimator based on hardware specs and electricity tariffs.</p>
        </a>
        <a href="https://sugiro.io/stonks/" target="_blank" rel="noopener noreferrer" class="block bg-dark rounded-lg p-4 shadow-[0_0_20px_rgba(0,0,0,0.3)] transition-colors duration-200 hover:bg-zinc-800">
          <h3 class="font-bold mb-1">Capital Gains Calculator</h3>
          <p class="text-xs font-light">A tax calculator for Brazilian investors trading US stocks with PTAX conversion.</p>
        </a>
      </div>
    </section>
  </main>
</Layout>
