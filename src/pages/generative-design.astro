<style>
  .list-section {
    margin-top: 1rem;
  }
  .project-link {
    position: relative;
  }
  .project-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: white;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  .project-link:hover::after {
    transform: scaleX(1);
  }
  @media (min-width: 960px) {
    .about-section {
      padding-right: 3rem;
    }
  }
</style>
  <main class="grid grid-cols-12 gap-4 desktop:items-start">
    <!-- Site Title -->
    <section class="col-span-12 desktop:col-span-3">
      <a
        href="/"
        class="text-[52px] font-extralight text-white"
      >
        sugiro.ai
      </a>
    </section>

    <!-- Page Title + Description -->
    <section class="col-span-12 desktop:col-span-3 list-section about-section">
      <h2 class="text-xl font-medium text-orange-500 mb-4">generative design</h2>
      <p class="text-sm font-light" style="line-height: 1.8;">
        Placeholder description for the generative design page. This will be updated with a brief overview of the work collected here.
      </p>
    </section>

    <!-- Projects -->
    <section class="col-span-12 desktop:col-span-6 list-section">
      <h2 class="text-xl font-medium text-orange-500 mb-4">projects</h2>
      <ul class="space-y-2">
        <li><a href="https://sugiro.io/" target="_blank" rel="noopener noreferrer" class="project-link text-sm font-light">Connecting the Dots</a></li>
