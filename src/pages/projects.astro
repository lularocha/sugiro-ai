---
import Layout from "../layouts/Layout.astro";
---

<Layout>
<style>
  .list-section {
    margin-top: 1rem;
  }
  .project-link {
    position: relative;
  }
  .project-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: white;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  .project-link:hover::after {
    transform: scaleX(1);
  }
  @media (min-width: 960px) {
    .about-section {
      padding-right: 3rem;
    }
  }
</style>
  <main class="grid grid-cols-12 gap-4 desktop:items-start">
    <!-- Site Title -->
